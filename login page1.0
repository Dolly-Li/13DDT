# --- Update time and date ---
def update_time():
    now = datetime.now()
    time_label.config(text=now.strftime("%H:%M"))
    date_label.config(text=now.strftime("%A\n%B %d"))
    root.after(1000, update_time)

update_time()
root.mainloop()
